#include <16f877a.h>
#fuses xt
#use delay(clock = 4M)
#byte trisb = 0x86
#byte portb = 0x06
#byte trisc = 0x87
#byte portc = 0x07
#bit P1 = portc.0
#bit P2 = portc.1
#bit T1 = portc.2
#bit T2 = portc.3

void main() {
   trisb = 0b00000000;
   trisc = 0b00000011;
   
   int datos[10] = {0b11000000, 0b11111001, 0b10100100, 0b10110000, 0b10011001,
                    0b10010010, 0b10000010, 0b11111000, 0b10000000, 0b10010000};
   int contador = 0;
   bool soltar = true;
   
   portb = 0b11111111;
   portc = 0b00000000;
   
   while(true) {
      T2 = 1;
      if(P1 == 0) {
         contador++;
         if(contador < 10) {
            portb = datos[contador];
            delay_ms(500);
         }
      }
   }
}
