#include <16f877a.h>
#fuses xt
#use delay(clock = 4M)
#byte trisb = 0x86
#byte trisc = 0x87
#byte portb = 0x06
#byte portc = 0x07

void main() {
   
   trisb = 0b00000000;
   trisc = 0b00000000;
   
   portb = 0b00000000;
   portc = 0b00000000;
   
   while(true) {
      T2 = 0;
      portb = 0b11000111;
      T2 = 1;
      
   }
   
}
