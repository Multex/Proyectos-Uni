#define LCD_DATA6       PIN_D6
#define LCD_DATA7       PIN_D7
#include <lcd.c>
/*******************/
void keys(){ // Funci√≥n para detectar teclas
    lcd_init();
    lcd_gotoxy(1,1);
    int tecla[4][4] = {{'1','2','3','A'},
                       {'4','5','6','B'},
                       {'7','8','9','C'},
                       {'*','0','#','D'}}; // Matriz de teclas

    portb = 0b00001110;
    if(C1 == 0){printf(lcd_putc, "%s", tecla[0][0]);}
}

